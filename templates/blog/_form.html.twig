{% extends 'base.html.twig' %}

{% block navbar_buttons %}
    {% if blog is defined and blog.id is not null %}
        <li class="nav-item">
            <a class="btn btn-outline-primary" href="{{ path('app_blog_page', {'id': blog.id}) }}" style="margin-right: 10px">Read</a>
        </li>
        <li class="nav-item">
            {{ include('blog/_delete_form.html.twig') }}
            <button class="btn btn-danger" form="delete-form" style="margin-right: 10px">Delete</button>
        </li>
    {% endif %}
    <li class="nav-item">
        <button type="submit" form="create-blog-form" class="btn btn-primary">{{ button_label|default('Save Changes') }}</button>
    </li>
{% endblock %}


{% block body %}
    {{ form_start(form, {'attr': {'id': 'create-blog-form'}}) }}

    <div class="form-group">
        {{ form_label(form.title, 'Title') }}
        {{ form_widget(form.title, { 'attr': {'class': 'form-control', 'placeholder': 'Lorem ipsum'} }) }}
    </div>
    <div class="form-group">
        {{ form_label(form.description, 'Description') }}
        {{ form_widget(form.description, { 'attr': {'class': 'form-control', 'placeholder': 'Lorem ipsum dolor sit amet'} }) }}
    </div>
    <div class="form-group">
        {{ form_label(form.text, 'Textarea') }}
        {{ form_widget(form.text, { 'attr': {'class': 'form-control', 'rows': 3, 'placeholder': 'Lorem ipsum dolor sit amet, consectetur adipiscing elit. In rhoncus erat eu magna pharetra, at porta ex consequat.'} }) }}
    </div>
    <div class="form-group">
        {{ form_label(form.image, 'Image URL') }}
        {{ form_widget(form.image, { 'attr': {'class': 'form-control', 'placeholder': 'Enter image URL'} }) }}
    </div>
    <div class="form-group">
        {{ form_label(form.categories, 'Category') }}
        {{ form_widget(form.categories) }}
    </div>
    {{ form_widget(form.user, { 'attr': {'style': 'display:none;'} }) }}
    {{ form_end(form) }}
{% endblock %}
{% block footer %}{% endblock %}
