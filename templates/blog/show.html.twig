{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
    <h1>Blog</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ blog.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ blog.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ blog.description }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ blog.text }}</td>
            </tr>
            <tr>
                <th>Comments</th>
                <td>
                    {% if blog.comments|length > 0 %}
                        <ul>
                            {% for comment in blog.comments %}
                                <li>{{ comment.content }}</li> {# Предполагается, что у вашего комментария есть поле content #}
                            {% endfor %}
                        </ul>
                    {% else %}
                        <p>No comments available.</p>
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ blog.author.username }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_blog_index') }}">back to list</a>

    <a href="{{ path('app_blog_edit', {'id': blog.id}) }}">edit</a>

    {{ include('blog/_delete_form.html.twig') }}
{% endblock %}
