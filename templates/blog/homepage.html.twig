{% extends 'base.html.twig' %}

{% block title %}Blog index{% endblock %}
{% block navbar_buttons %}
    {% if app.user %}
        <li class="nav-item">
            <a class="nav-link" href="{{ path('app_user_profile', {'id': user.id}) }}">{{ user.username }}</a>
        </li>
    {{ parent() }}
    {% else %}
    {% endif %}
{% endblock %}
{% block body %}
    <body>
    <!-- Page header with logo and tagline-->
    <header class="py-5 bg-light border-bottom mb-4">
        <div class="container">
            <div class="text-center my-5">
                <h1 class="fw-bolder">Welcome to Symfony_Blog Homepage!</h1>
                <p class="lead mb-0">Made By AndrodenBY</p>
            </div>
        </div>
    </header>
    <!-- Page content-->
    <div class="container">
        <div class="row">
            <!-- Blog entries-->
            <div class="col-lg-8">
                <!-- Featured blog post-->
                <div class="card mb-4">
                    <a href="#!"><img class="card-img-top" src="https://americanathleticshoe.com/cdn/shop/t/23/assets/placeholder_2048x.png?v=113555733946226816651665571258" alt="..." /></a>
                    <div class="card-body">
                        <div class="small text-muted">January 1, 2023</div>
                        <h2 class="card-title">Featured Post Title</h2>
                        <p class="card-text">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Reiciendis aliquid atque, nulla? Quos cum ex quis soluta, a laboriosam. Dicta expedita corporis animi vero voluptate voluptatibus possimus, veniam magni quis!</p>
                        <a class="btn btn-primary" href="#!">Read more →</a>
                    </div>
                </div>
                <!-- Nested row for non-featured blog posts-->
                <div class="row">
                    <div class="col-lg-6">
                        <!-- Blog post-->
                        <div class="blog-list">
                            {% for blog in blogs %}
                                {% if loop.index <= 3 %}
                                <div class="card" style="margin-bottom: 20px">
                                    {% if blog.image is not empty %}
                                    <a href="#!"><img class="card-img-top" src={{ asset('uploads/' ~ blog.image|default('blog-preview.jpg')) }} alt="..." /></a>
                                        {% endif %}
                                    <div class="card-body">
                                        <div class="small text-muted">{{ blog.publishedAt|date('F j, Y') }}</div>
                                        <div class="small text-muted">By {{ blog.user.email }}</div>
                                        <h2 class="card-title h4">{{ blog.title }}</h2>
                                        <p class="card-text">{{ blog.description }}</p>
                                        <p class="card-text">
                                            Categories:
                                            {% for category in blog.categories %}
                                                {{ category.name }}{% if not loop.last %}, {% endif %}
                                            {% endfor %}
                                        </p>
                                        <a class="btn btn-primary" href="{{ path('app_blog_page', { id: blog.id }) }}">Read more →</a>
                                    </div>
                                </div>
                                {% endif %}
                            {% endfor %}
                        </div>

                    </div>
                    <div class="col-lg-6">
                        <div class="blog-list">
                            {% for blog in blogs %}
                                {% if loop.index > 3 and loop.index <= 6 %}
                                    <div class="card" style="margin-bottom: 20px">
                                        {% if blog.image is not empty %}
                                            <a href="#!"><img class="card-img-top" src={{ asset('uploads/' ~ blog.image|default('blog-preview.jpg')) }} alt="..." /></a>
                                        {% endif %}
                                        <div class="card-body">
                                            <div class="small text-muted">{{ blog.publishedAt|date('F j, Y') }}</div>
                                            <div class="small text-muted">By {{ blog.user.email }}</div>
                                            <h2 class="card-title h4">{{ blog.title }}</h2>
                                            <p class="card-text">{{ blog.description }}</p>
                                            <p class="card-text">
                                                Categories:
                                                {% for category in blog.categories %}
                                                    {{ category.name }}{% if not loop.last %}, {% endif %}
                                                {% endfor %}
                                            </p>
                                            <a class="btn btn-primary" href="{{ path('app_blog_page', { id: blog.id }) }}">Read more →</a>
                                        </div>
                                    </div>
                                {% endif %}
                            {% endfor %}
                    </div>
                </div>
                <!-- Pagination-->
                <nav aria-label="Pagination">
                    <hr class="my-0" />
                    <ul class="pagination justify-content-center my-4">
                        <li class="page-item disabled"><a class="page-link" href="#" tabindex="-1" aria-disabled="true">Newer</a></li>
                        <li class="page-item active" aria-current="page"><a class="page-link" href="#!">1</a></li>
                        <li class="page-item"><a class="page-link" href="#!">2</a></li>
                        <li class="page-item"><a class="page-link" href="#!">3</a></li>
                        <li class="page-item disabled"><a class="page-link" href="#!">...</a></li>
                        <li class="page-item"><a class="page-link" href="#!">15</a></li>
                        <li class="page-item"><a class="page-link" href="#!">Older</a></li>
                    </ul>
                </nav>
            </div>
            <!-- Side widgets-->
            <div class="col-lg-4">
                <!-- Categories widget-->
                <div class="card mb-4">
                    <div class="card-header">Categories</div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-6">
                                <ul class="list-unstyled mb-0">
                                    {% for category in categories %}
                                        <li><a href="{{ path('app_blog_category', {'category': category.name}) }}">{{ category.name }}</a></li>
                                    {% endfor %}
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Side widget-->
                <div class="card mb-4">
                    <div class="card-header">Side Widget</div>
                    <div class="card-body">My github: <a href="https://github.com/AndrodenBY">https://github.com/AndrodenBY</a></div>
                </div>
            </div>
        </div>
    </div>
    </div>
    </body>
{% endblock %}
